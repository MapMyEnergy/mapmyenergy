source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'haml'
gem 'jquery-rails'
gem 'twitter-bootstrap-rails'
gem 'rubillow'

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'sqlite3'
  gem 'therubyracer'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

